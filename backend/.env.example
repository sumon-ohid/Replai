# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://localhost:27017/replai

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Microsoft OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/auth/outlook/callback

# Security
TOKEN_ENCRYPTION_KEY=your-encryption-key
CORS_ORIGIN=http://localhost:5173

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-email
SMTP_PASS=your-smtp-password

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# AI Integration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo

# Monitoring
SENTRY_DSN=your-sentry-dsn
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=300000

# Feature Flags
ENABLE_EMAIL_AUTOMATION=true
ENABLE_AI_RESPONSES=true
ENABLE_ATTACHMENT_PROCESSING=true
ENABLE_CUSTOM_EMAIL_PROVIDERS=true

# Cleanup Settings
EMAIL_CLEANUP_INTERVAL=7d
NOTIFICATION_CLEANUP_INTERVAL=30d
LOG_CLEANUP_INTERVAL=90d

# Storage
MAX_ATTACHMENT_SIZE=10485760
STORAGE_PATH=./uploads

# Defaults
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC
DEFAULT_SYNC_INTERVAL=60000
MAX_RETRY_ATTEMPTS=3

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ADMIN_EMAIL=admin@replai.tech

# Testing
TEST_EMAIL=test@example.com
TEST_PASSWORD=test-password
MOCK_SERVICES=false

# Documentation
API_DOC_URL=http://localhost:3000/api/docs
SWAGGER_ENABLED=true
